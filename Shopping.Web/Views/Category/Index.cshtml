@model IEnumerable<Category>;

<h3>Categories Show</h3>
<hr />
<a class="btn btn-primary" href="/Category/Create">Add New Category</a>

<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Created Time</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success" href="/Category/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger" href="/Category/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>